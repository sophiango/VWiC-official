<!DOCTYPE html>
<html lang="en-US">
<head>
  <% include header%>
  <link rel="stylesheet" type="text/css" href="/css/story.css"/>
  <script>
  $(window).load(function(){
    $("#menu").sticky({ topSpacing: 0 });
  });
  </script>
</head>
<body>
  <!-- NAVBAR -->
  <div class="navbar menubar" id="menu">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle menu-button" data-toggle="collapse" data-target="#myNavbar">
          <span class="glyphicon glyphicon-align-justify"></span>
        </button>
        <a class="navbar-brand logo" href="#">VWiC</a>
      </div>
      <div>
        <nav class="collapse navbar-collapse" id="myNavbar" role="navigation">
          <ul class="nav navbar-nav navbar-right navstyle">
            <li><a href="/" class="page-scroll">Home</a></li>
            <li><a href="/#about" class="page-scroll">About Us</a></li>
            <li><a href="/#stories" class="page-scroll active">Hall of fame</a></li>
            <li><a href="/#mentorship" class="page-scroll">Mentorship</a></li>
            <li><a href="/#events" class="page-scroll">Events</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- BODY -->
  <div class="container" id="story-header">
    <div class="head-story">
      <center>
        <img src="<%=story.subject_img%>" name="kathypham" width="140px" height="140px" class="img-circle"/>
        <div>
          <a href="#"><img class="icon-story" src="/images/twitter.png" alt="twitter icon"></a>
          <a href="#"><img class="icon-story" src="/images/facebook.png" alt="facebook icon"></a>
        </div>
        <h1 class="hostyle"><%=story.subject%></h1>
        <h2 class="banner-text"><%=story.headline%></h2>
      </center>
    </div>
  </div>

  <!--Comment section -->
  <div class="container" id="story-comments">
    <div class="post">
        <div class="post-heading">
          <div class="pull-left image">
            <img src="https://pbs.twimg.com/profile_images/3627590143/c00483efc3d5f4dfbcdad86ae8efd7d1_bigger.jpeg" class="img-circle avatar" alt="author image">
          </div>
          <div class="pull-left meta">
            <h4 class="user"><%=story.author%> is the author</h4>
            <h5 class="time">1 minute ago</h5>
          </div>
        </div>
        <div class="post-description">
          <p><%=story.content%></p>
          <% story.quotes.forEach(function(quote) { %>
            <blockquote>
              <p>“<%=quote.quote%>”</p>
              <a href="<%=quote.source%>"><small><cite title="Source Title"><%=quote.source%></cite></small></a>
            </blockquote>
          <% }); %>

